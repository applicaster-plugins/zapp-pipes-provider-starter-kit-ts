{
  "name": "zapp-pipes-provider-ts",
  "version": "1.0.0",
  "description": "example provider project for zapp-pipes set with TypeScript",
  "main": "lib/index.js",
  "scripts": {
    "check-types": "node_modules/.bin/tsc",
    "test": "node_modules/.bin/jest",
    "test:integration": "node_modules/.bin/jest integration.test.ts",
    "start": "nodemon --inspect=0.0.0.0:9229",
    "start:hot": "node_modules/.bin/babel-node webpack-hot.js",
    "lint": "node_modules/.bin/eslint './*.js' './src/**/*.ts' './__tests__/**/*.ts'",
    "lint:fix": "node_modules/.bin/eslint './*.js' './src/**/*.ts' './__tests__/**/*.ts' --fix",
    "build": "rm -rf lib && npm run lint && npm run check-types && NODE_ENV=production ./node_modules/.bin/babel --extensions '.ts' src -d lib",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/applicaster-plugins/zapp-pipes-provider-ts.git"
  },
  "keywords": [
    "applicaster",
    "datasource",
    "zapp-pipes"
  ],
  "author": "applicaster",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/applicaster-plugins/zapp-pipes-provider-ts/issues"
  },
  "homepage": "https://github.com/applicaster-plugins/zapp-pipes-provider-ts#readme",
  "dependencies": {
    "axios": "^0.19.0"
  },
  "devDependencies": {
    "@applicaster/zapp-pipes-dev-kit": "^1.3.0",
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "@types/ramda": "^0.26.29",
    "@types/sinon": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-node": "^0.0.1-security",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "nock": "^11.3.5",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ramda": "^0.26.1",
    "sinon": "^7.5.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.5"
  },
  "jest": {
    "testRegex": "/__tests__/.*(\\.test.ts)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/node_modules"
    ],
    "collectCoverageFrom": [
      "packages/**/*.js"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  }
}
